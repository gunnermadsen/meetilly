{
  "compileOnSave": false,
  "exclude": [
    "./node_modules/@types/webrtc"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "app/*"
      ],
      "@env/*": [
        "environments/*"
      ]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types",
      "types/webrtc"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
